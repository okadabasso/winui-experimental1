<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="using:System">

    <!-- Use sys:Double to reference System.Double in WinUI / .NET Core projects -->

    <x:Double x:Key="FontSize_Default">16</x:Double>
    <x:Double x:Key="FontSize_Small">14</x:Double>
    <x:Double x:Key="FontSize_Large">18</x:Double>
    <x:Double x:Key="ControlContentThemeFontSize">16</x:Double>
</ResourceDictionary>
