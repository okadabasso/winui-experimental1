<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App1.Views.FormsSamplePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >
    <Page.Resources>

    </Page.Resources>
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,8,8">
            <TextBlock Text="textbox" VerticalAlignment="Center"></TextBlock>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,8">
            <TextBox Width="200" VerticalAlignment="Center" Text="{Binding Message}"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,8,8">
            <TextBlock Text="dropdown" VerticalAlignment="Center"></TextBlock>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,8">
            <ComboBox Width="200" VerticalAlignment="Center" ItemsSource="{Binding SelectionItems}" SelectedItem="{Binding SelectedItem}"/>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,8,8">
            <TextBlock Text="radio" VerticalAlignment="Center"></TextBlock>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="16">
                <RadioButton  Content="Option 0" VerticalAlignment="Center"/>
                <RadioButton Content="Option 1" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="0" Margin="0,0,8,8">
            <TextBlock Text="チェックボックス" VerticalAlignment="Center"></TextBlock>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="16">
                <CheckBox  Content="Option 0" VerticalAlignment="Center"/>
                <CheckBox Content="Option 1" VerticalAlignment="Center"/>
                <Button Content="Button2"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="0" Margin="0,0,0,8" VerticalAlignment="Center">
            <Grid VerticalAlignment="Center" Margin="0,0,0,0">
                <TextBlock Text="保存" VerticalAlignment="Center"/>

            </Grid>
            
        </Grid>
        <Grid Grid.Row="4" Grid.Column="1" Margin="0,0,0,8" >

            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <!-- Primary -->
                <Button Style="{StaticResource CustomButton.Primary}">
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <SymbolIcon Symbol="Save"/>
                        <TextBlock Text="保存"/>
                    </StackPanel>
                </Button>

                <!-- Secondary -->
                <Button Style="{StaticResource CustomButton.Secondary}">
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <SymbolIcon Symbol="Save"/>
                        <TextBlock Text="保存"/>
                    </StackPanel>
                </Button>

                <!-- Info -->
                <Button Style="{StaticResource CustomButton.Info}">
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <SymbolIcon Symbol="Save"/>
                        <TextBlock Text="保存"/>
                    </StackPanel>
                </Button>

                <!-- Success -->
                <Button Style="{StaticResource CustomButton.Success}">
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <SymbolIcon Symbol="Save"/>
                        <TextBlock Text="保存"/>
                    </StackPanel>
                </Button>

                <!-- Warning -->
                <Button Style="{StaticResource CustomButton.Warning}">
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <SymbolIcon Symbol="Save"/>
                        <TextBlock Text="保存"/>
                    </StackPanel>
                </Button>

                <!-- Danger -->
                <Button Style="{StaticResource CustomButton.Danger}">
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <SymbolIcon Symbol="Save"/>
                        <TextBlock Text="削除"/>
                    </StackPanel>
                </Button>

                <!-- Disabled example -->
                <Button Style="{StaticResource CustomButton.Danger}" IsEnabled="False">
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <SymbolIcon Symbol="Save"/>
                        <TextBlock Text="削除 (無効)"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
